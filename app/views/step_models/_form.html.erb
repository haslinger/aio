<%- model_class = StepModel -%>
<%= bootstrap_error(@step_model, model_class ) %>

<%= simple_form_for @step_model, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                step_models_path, :class => 'btn' %>
  </div>
<% end %>
