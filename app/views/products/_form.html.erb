<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :productkey %>
    <%= f.input :shorttext %>
    <%= f.input :description %>
    <%= f.input :productgroup %>
    <%= f.input :eannumber %>
    <%= f.input :taxcode %>
    <%= f.input :deletionflag %>
    <%= f.input :baseunit %>
    <%= f.input :salesprice %>
    <%= f.input :purchaseprice %>
    <%= f.input :user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
