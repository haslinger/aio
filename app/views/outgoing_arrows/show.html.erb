<%- model_class = OutgoingArrow -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:step_id) %>:</strong></dt>
  <dd><%= @outgoing_arrow.step.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:successor_id) %>:</strong></dt>
  <dd><%= @outgoing_arrow.successor.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:company_id) %>:</strong></dt>
  <dd><%= @outgoing_arrow.company.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              outgoing_arrows_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_outgoing_arrow_path(@outgoing_arrow), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              outgoing_arrow_path(@outgoing_arrow),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
