  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @customer.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:academictitle) %>:</strong></dt>
  <dd><%= @customer.academictitle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lastname) %>:</strong></dt>
  <dd><%= @customer.lastname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:firstname) %>:</strong></dt>
  <dd><%= @customer.firstname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:street) %>:</strong></dt>
  <dd><%= @customer.street %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zipcode) %>:</strong></dt>
  <dd><%= @customer.zipcode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @customer.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @customer.country %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @customer.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fax) %>:</strong></dt>
  <dd><%= @customer.fax %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobil) %>:</strong></dt>
  <dd><%= @customer.mobil %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @customer.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:taxnumber) %>:</strong></dt>
  <dd><%= @customer.taxnumber %></dd>
  <dt><strong><%= model_class.human_attribute_name(:paymentterm_id) %>:</strong></dt>
  <dd><%= @customer.paymentterm.shorttext %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customergroup) %>:</strong></dt>
  <dd><%= @customer.customergroup %></dd>
  <dt><strong><%= model_class.human_attribute_name(:taxcode) %>:</strong></dt>
  <dd><%= @customer.taxcode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:salesman) %>:</strong></dt>
  <dd><%= @customer.salesman %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @customer.comment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deletionflag) %>:</strong></dt>
  <dd><%= @customer.deletionflag %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contactperson) %>:</strong></dt>
  <dd><%= @customer.contactperson %></dd>
  <dt><strong><%= model_class.human_attribute_name(:discount) %>:</strong></dt>
  <dd><%= @customer.discount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:consignee) %>:</strong></dt>
  <dd><%= @customer.consignee %></dd>
  <dt><strong><%= model_class.human_attribute_name(:currency_id) %>:</strong></dt>
  <dd><%= @customer.currency.shorttext %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_by) %>:</strong></dt>
  <dd><%= @customer.created_by %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              customers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_customer_path(@customer), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              customer_path(@customer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
