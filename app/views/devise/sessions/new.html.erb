<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, :input_html => {:value => "admin@admin.com"} %>
    <%= f.input :password, :required => false, :input_html => {:value => "secret"} %>
    <%= f.input :remember_me, :as => :boolean, :input_html => {:value => true} if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in" %>
  </div>
<% end %>

